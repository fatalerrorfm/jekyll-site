source "https://rubygems.org"
ruby RUBY_VERSION

gem "jekyll", "3.8.5"

# Minima is the default theme for new Jekyll sites.
# gem "minima", "~> 2.5"
# We use the jekyll-remote-theme to get the latest minima, allowing custom _includes;
# see https://github.com/jekyll/minima/issues/472#issuecomment-588079233
gem "jekyll-remote-theme"

gem "jekyll-feed"
gem "jekyll-seo-tag"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

